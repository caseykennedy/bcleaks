{
  "version": 2,
  "name": "bc-leaks",
  "builds": [
    {
      "src": "web/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    },
    {
      "src": "studio/package.json",
      "use": "@now/static-build",
      "config":  { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "^/studio/static/(.*)", "dest": "/studio/static/$1" },
    { "src": "^/studio/(.*)", "dest": "/studio/index.html" },
    {
      "src": "/(.*)", "dest": "/web/$1"
    }
  ],
  "alias": ["bc-leaks.now.sh"]
}
